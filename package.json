{
  "name": "gomoku",
  "version": "1.0.0",
  "private": true,
  "description": "Multiplayer Gomoku game with Vue3 + NestJS + WebSocket",
  "scripts": {
    "dev:frontend": "pnpm --filter frontend dev",
    "dev:backend": "pnpm --filter backend start:dev",
    "dev": "concurrently \"pnpm dev:backend\" \"pnpm dev:frontend\"",
    "build:frontend": "pnpm --filter frontend build",
    "build:backend": "pnpm --filter backend build",
    "build": "pnpm build:backend && pnpm build:frontend",
    "lint": "pnpm --filter frontend lint && pnpm --filter backend lint",
    "type-check": "pnpm --filter frontend type-check && pnpm --filter backend build",
    "test:websocket": "node test-websocket.js",
    "test:full-flow": "node test-full-flow.js",
    "db:migrate": "node backend/database/migrate.js"
  },
  "keywords": [
    "gomoku",
    "vue3",
    "nestjs",
    "websocket",
    "multiplayer"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}

